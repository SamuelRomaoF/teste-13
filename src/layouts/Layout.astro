---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import LazyFooter from '../components/LazyFooter.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
---
<!DOCTYPE html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <!-- SEO básicos -->
    <title>{Astro.props.title ?? 'Fire Domínios | Agência Digital, Criação de Sites e Marketing'}</title>
    <meta name="description" content={Astro.props.description ?? 'A Fire Domínios cria sites de alta performance, landing pages e soluções digitais para acelerar o crescimento da sua empresa.'} />
    <slot name="head" />
    <!-- Favicon: logo oficial Fire Domínios -->
    <link rel="icon" type="image/webp" sizes="32x32" href="/assets/images/logo-small.webp" />
    <style>
      html, body {
        overflow-x: hidden;
        max-width: 100%;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col font-inter text-gray-900 bg-gradient-to-b from-[#FFFAF7] via-[#FFF7F1] to-[#FFEDE1] bg-fixed">
    <Navbar />
    <main class="flex-grow pt-16">
      <slot />
    </main>
    <LazyFooter />
    <WhatsAppFloat />
  </body>
</html> 